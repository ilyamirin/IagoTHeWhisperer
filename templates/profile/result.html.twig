{% extends 'base.html.twig' %}

{% block body %}
<div class="col-12 mx-auto">
    <table class="table table-bordered table-hover text-center">
        <thead>
            <tr>
                <th>Банк</th>
                {% for tariff in tariffs %}
                    <th colspan="1">{{ tariff.getTariff().getBank().getName() }}</th>
                {% endfor %}
            </tr>
        </thead>
        <tbody>
            <tr>
                <th class="align-middle">Тариф</th>
                {% for tariff in tariffs %}
                    <th class="align-middle">{{ tariff.getTariff().getName() }}</th>
                {% endfor %}
            </tr>

            <tr>
                <th class="align-middle">Стоимость</th>
                {% for tariff in tariffs %}
                    <td class="align-middle">{{ tariff.getTariff().getCost() }}</td>
                {% endfor %}
            </tr>

            <tr>
                <th class="align-middle">Бесплатное обслуживание</th>
                {% for tariff in tariffs %}
                    <td class="align-middle">{{ tariff.getTariff().getFreeService() }}</td>
                {% endfor %}
            </tr>

            <tr>
                <th class="align-middle">Бизнес-карты (годовое обслуживание)</th>
                {% for tariff in tariffs %}
                    <td class="align-middle">{{ tariff.getTariff().getYearService() }}</td>
                {% endfor %}
            </tr>

            <tr>
                <th class="align-middle">Прием на баковская карта/касса (*)</th>
                {% for tariff in tariffs %}
                    <td class="align-middle">{{ tariff.getReception() }}</td>
                {% endfor %}
            </tr>

            <tr>
                <th class="align-middle">Выдача с банковской карты (*)</th>
                {% for tariff in tariffs %}
                    <td class="align-middle">{{ tariff.getExtradition() }}</td>
                {% endfor %}
            </tr>

            <tr>
                <th class="align-middle">Платежные поручения (*)</th>
                {% for tariff in tariffs %}
                    <td class="align-middle">{{ tariff.getErrands() }}</td>
                {% endfor %}
            </tr>

            <tr>
                <th class="align-middle">Перевод на физическое лицо (*)</th>
                {% for tariff in tariffs %}
                    <td class="align-middle">{{ tariff.getTransfers() }}</td>
                {% endfor %}
            </tr>

            <tr>
                <th class="align-middle">Выдача по чеку (*)</th>
                {% for tariff in tariffs %}
                    <td class="align-middle">{{ tariff.getCheck() }}</td>
                {% endfor %}
            </tr>

            <tr>
                <th class="align-middle">Комментарии</th>
                {% for tariff in tariffs %}
                    <td class="align-middle">{{ tariff.getTariff().getComment() }}</td>
                {% endfor %}
            </tr>

            <tr>
                <th class="align-middle">Итоговая стоимость (*)</th>
                {% for tariff in tariffs %}
                    <td class="align-middle">{{ tariff.getCost() }}</td>
                {% endfor %}
            </tr>
        </tbody>
    </table>

    <div class="alert alert-primary" role="alert">
      * пункты рассчитываются на основе веденных данных
    </div>
</div>
{% endblock body %}
