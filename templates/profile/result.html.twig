{% extends 'base.html.twig' %}

{% block body %}
<div class="col-12 mx-auto">
    <table class="table table-bordered table-hover text-center">
        <thead>
            <tr>
                <th>Банк</th>
                {% for bank in banks %}
                    <th colspan="{{ bank.getCountTariffs() }}">{{ bank.getName() }}</th>
                {% endfor %}
            </tr>
        </thead>
        <tbody>
            <tr>
                <th class="align-middle">Тариф</th>
                {% for tariff in tariffs %}
                    <th class="align-middle">{{ tariff.getName() }}</th>
                {% endfor %}
            </tr>

            <tr>
                <th class="align-middle">Стоимость</th>
                {% for tariff in tariffs %}
                    <td class="align-middle">{{ tariff.getCost() }}</td>
                {% endfor %}
            </tr>

            <tr>
                <th class="align-middle">Бесплатное обслуживание</th>
                {% for tariff in tariffs %}
                    <td class="align-middle">{{ tariff.getFreeService() }}</td>
                {% endfor %}
            </tr>

            <tr>
                <th class="align-middle">Бизнес-карты (годовое обслуживание)</th>
                {% for tariff in tariffs %}
                    <td class="align-middle">{{ tariff.getYearService() }}</td>
                {% endfor %}
            </tr>

            <tr>
                <th class="align-middle">Прием на Прием на баковская карта/касса</th>
                {% for tariff in tariffs %}
                    <td class="align-middle"></td>
                {% endfor %}
            </tr>

            <tr>
                <th class="align-middle">Выдача с банковской карты</th>
                {% for tariff in tariffs %}
                    <td class="align-middle"></td>
                {% endfor %}
            </tr>

            <tr>
                <th class="align-middle">Бесплатные платежные поручения</th>
                {% for tariff in tariffs %}
                    <td class="align-middle"></td>
                {% endfor %}
            </tr>

            <tr>
                <th class="align-middle">Перевод на физическое лицо</th>
                {% for tariff in tariffs %}
                    <td class="align-middle"></td>
                {% endfor %}
            </tr>

            <tr>
                <th class="align-middle">Выдача по чеку</th>
                {% for tariff in tariffs %}
                    <td class="align-middle"></td>
                {% endfor %}
            </tr>

            <tr>
                <th class="align-middle">Комментарии</th>
                {% for tariff in tariffs %}
                    <td class="align-middle">{{ tariff.getComment() }}</td>
                {% endfor %}
            </tr>
        </tbody>
    </table>
</div>
{% endblock body %}
